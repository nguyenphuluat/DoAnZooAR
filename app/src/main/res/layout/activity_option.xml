<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OptionActivity"
    android:background="@drawable/shark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bo_goc_editext"
            android:text="@string/changpass"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnChangePassword"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bo_goc_editext"
            android:text="@string/changvatar"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnChangeAvatar"></Button>
        <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bo_goc_editext"
        android:text="@string/manageuser"
        android:layout_marginBottom="10dp"
            android:id="@+id/btnUserManager"></Button>
        <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bo_goc_editext"
        android:text="@string/modelmanager"
        android:layout_marginBottom="10dp"
            android:id="@+id/modelManager"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>